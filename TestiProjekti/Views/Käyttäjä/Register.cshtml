@model TestiProjekti.Models.KäyttäjäMalli
@{
    ViewBag.Title = "Register";
}
<fieldset>
    <legend>
            Rekisteröintisivu
    </legend>
    @using (Html.BeginForm("Register","käyttäjä",FormMethod.Post))
    {
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Etunimi)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Etunimi)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.Etunimi, null, new { @class = "text text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Sukunimi)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Sukunimi)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.Sukunimi, null, new { @class = "text text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Email)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Salasana)
            </td>
            <td>
                @Html.PasswordFor(model => model.Salasana)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.Salasana, null, new { @class = "text text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.VahvistaSalasana)
            </td>
            <td>
                @Html.PasswordFor(model => model.VahvistaSalasana)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.VahvistaSalasana, null, new { @class = "text text-danger" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Register" />
                        </td>
                        <td>
                            <input type="reset" value="Reset" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="color:green">
                @ViewBag.success
            </td>
        </tr>
        <tr>
            <td>
                @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })
            </td>
        </tr>
    </table>
    }
</fieldset>